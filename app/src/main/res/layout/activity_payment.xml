<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Buyers.PaymentActivity"
    >

    <TextView
        android:id="@+id/payment_txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Please choose payment method:"
        android:fontFamily="@font/roboto_regular"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="@color/colorPrimaryDark"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/mpesa_img_btn"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/payment_txt"
        android:layout_marginLeft="20dp"
        android:elevation="5dp">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/mpesa"
            />

    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/paypal_img_btn"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/mpesa_img_btn"
        android:layout_marginLeft="20dp"
        android:elevation="5dp">
        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:src="@drawable/paypal_logo"
            />


    </androidx.cardview.widget.CardView>




</RelativeLayout>